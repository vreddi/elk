{
  "compilerOptions": {
    "baseUrl": "src",
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "sourceMap": true,
    "resolveJsonModule": true,
    "strict": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
    },
    "exclude": ["node_modules", "**/*.test.ts"], 
    "include": ["src/**/*.ts"],
    "paths": {
      "@/*": ["*"],
      "@services/*": ["src/services/*"],
      "@models/*": ["src/models/*"],
      "@source/*": ["src/*"],
      "@controllers/*": ["src/controllers/*"]
    }
}
